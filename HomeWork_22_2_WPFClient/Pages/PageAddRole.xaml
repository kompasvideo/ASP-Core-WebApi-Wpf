<Page x:Class="HomeWork_22_2_WPFClient.Pages.PageAddRole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeWork_22_2_WPFClient.Pages"
      mc:Ignorable="d" 
      xmlns:viewmodel="clr-namespace:HomeWork_22_2_WPFClient.ViewModel"
      DataContext="{Binding pageAddRole, Source={StaticResource ViewModelLocator}}"
      >
    <Page.Resources>
        <viewmodel:PageAddRoleViewModel x:Key="pageAddRole"/>
    </Page.Resources>
    <DockPanel>
        <Button Content="Вернуться назад" Command="{Binding ButtonReturnClickCommand, Source={StaticResource pageAddRole}}" HorizontalAlignment="Left" Width="100" DockPanel.Dock="Top"/>
        <GroupBox Header="Добавить роль" Width="230" Height="120">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Имя:" Margin="10,10,10,0"/>
                <TextBox Text="{Binding UserName,Source={StaticResource pageAddRole}}" Width="200"/>
                <Button Content="Добавить роль" Margin="50,20,50,20"
                        Command="{Binding ButtonAddRoleClickCommand, Source={StaticResource pageAddRole}}"/>
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Page>
